<% book.book_comments.each do |book_comment| %>
	<tr id="comment-<%= book_comment.id %>">
		<td>
			<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
		</td>
		<td><%= book_comment.user.name %></td>
		<td><%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
		<td>
			<%= book_comment.comment %>
		</td>
		<td></td>
		<td></td>
		<td>
			<% if book_comment.user == current_user%>
			  <div>
			    <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn-sm btn-danger" %>
			  </div>
			<% end %>
		</td>
	</tr>
<% end %>